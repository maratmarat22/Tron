<Page x:Class="Tron.Client.Application.Views.JoinLobbyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Tron.Client.Application.Views"
      mc:Ignorable="d"
      d:DesignHeight="1080"
      d:DesignWidth="1920"
      Title="JoinLobbyPage"
      Loaded="Page_Loaded">

    <Page.Background>
        <ImageBrush ImageSource="../Resources/Images/Background.jpg" />
    </Page.Background>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="1080" Width="1920">

        <!-- Заголовок -->
        <Border Width="850" Height="170" Margin="0,0,650,600">
            <Border.Background>
                <SolidColorBrush Color="#BB000000" />
            </Border.Background>
            <TextBlock Text="JOIN LOBBY"
                       FontFamily="{StaticResource Tiny}"
                       TextAlignment="Center"
                       FontSize="150"
                       Foreground="White"
                       HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="LightYellow" BlurRadius="50" ShadowDepth="0" Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- Таблица лобби -->
        <DataGrid x:Name="LobbiesGrid"
                  Margin="400,20,0,0"
                  Height="350"
                  MaxWidth="800"
                  BorderThickness="0"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center"
                  AutoGenerateColumns="False"
                  VerticalScrollBarVisibility="Hidden"
                  HorizontalScrollBarVisibility="Hidden"
                  IsReadOnly="True"
                  RowHeight="50"
                  HeadersVisibility="None"
                  GridLinesVisibility="None">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding HostName}" Width="400" />
                <DataGridTextColumn Header="Privacy" Binding="{Binding Privacy}" Width="150" />
                <DataGridTemplateColumn Header="Join" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="JOIN"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    BorderThickness="0"
                                    Foreground="White"
                                    Background="#00000000"
                                    Command="{Binding DataContext.JoinLobbyCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                    CommandParameter="{Binding}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                    <Setter Property="TextBlock.TextAlignment" Value="Center" />
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#00000000" />
                            <Setter Property="Foreground" Value="White" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="#00000000" />
                    <Setter Property="FontFamily" Value="{StaticResource Tiny}" />
                    <Setter Property="FontSize" Value="30" />
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="VerticalAlignment" Value="Center" />
                    <Setter Property="HorizontalAlignment" Value="Center" />
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Background>
                <SolidColorBrush Color="#BB000000" />
            </DataGrid.Background>
        </DataGrid>

        <!-- Поле ввода пароля -->
        <TextBox x:Name="PasswordTextBox"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Width="350"
                 Height="100"
                 Margin="0,0,800,-20"
                 Foreground="White"
                 FontFamily="{StaticResource Tiny}"
                 FontSize="40"
                 TextAlignment="Center"
                 VerticalContentAlignment="Center"
                 Visibility="{Binding PasswordTextBoxVisibility, Converter={StaticResource BoolToVisibility}}">
            <TextBox.Background>
                <SolidColorBrush Color="#BB000000" />
            </TextBox.Background>
        </TextBox>

        <!-- Кнопка подтверждения пароля -->
        <Button Width="350"
                Height="100"
                Margin="0,0,800,-270"
                BorderThickness="0"
                BorderBrush="White"
                Visibility="{Binding PasswordTextBoxVisibility, Converter={StaticResource BoolToVisibility}}"
                Command="{Binding PasswordSubmitCommand}">
            <Button.Background>
                <SolidColorBrush Color="#BB000000" />
            </Button.Background>
            <Button.Content>
                <TextBlock Text="JOIN"
                           Foreground="White"
                           FontFamily="{StaticResource Tiny}"
                           FontSize="40">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="LightGreen" BlurRadius="20" ShadowDepth="0" Opacity="1" />
                    </TextBlock.Effect>
                </TextBlock>
            </Button.Content>
        </Button>

        <!-- Кнопка "Назад" -->
        <Button Width="350"
                Height="100"
                Margin="0,0,800,230"
                BorderThickness="0"
                BorderBrush="White"
                Command="{Binding GoBackCommand}">
            <Button.Background>
                <SolidColorBrush Color="#BB000000" />
            </Button.Background>
            <Button.Content>
                <TextBlock Text="BACK"
                           Foreground="White"
                           FontFamily="{StaticResource Tiny}"
                           FontSize="40">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="HotPink" BlurRadius="20" ShadowDepth="0" Opacity="1" />
                    </TextBlock.Effect>
                </TextBlock>
            </Button.Content>
        </Button>

        <!-- Блок ошибки -->
        <Border Visibility="{Binding ErrorBlockVisibility, Converter={StaticResource BoolToVisibility}}"
                Width="600"
                Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="900,700,0,0">
            <Border.Background>
                <SolidColorBrush Color="#BB000000" />
            </Border.Background>
            <TextBlock Text="{Binding ErrorBlockText}"
                       FontSize="40"
                       Foreground="White"
                       FontFamily="{StaticResource Tiny}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       TextAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="HotPink" BlurRadius="20" ShadowDepth="0" Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>
        </Border>

    </Grid>
</Page>
