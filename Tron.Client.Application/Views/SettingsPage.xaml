<Page x:Class="Tron.Client.Application.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tron.Client.Application.Views"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SettingsPage">

    <Page.Background>
        <ImageBrush ImageSource="../Resources/Images/Background.jpg" />
    </Page.Background>

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="1080" Width="1920">
        <!-- Header -->
        <Border Width="750" Height="170" Margin="0,0,750,600">
            <Border.Background>
                <SolidColorBrush Color="#BB000000" />
            </Border.Background>
            <TextBlock Text="SETTINGS"
                       FontFamily="{StaticResource Tiny}"
                       TextAlignment="Center"
                       FontSize="150"
                       Foreground="White"
                       HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="LightYellow"
                                      BlurRadius="50"
                                      ShadowDepth="0"
                                      Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- Music Volume Label -->
        <Border Width="350" Height="100" Margin="0,0,800,230">
            <Border.Background>
                <SolidColorBrush Color="#BB000000" />
            </Border.Background>
            <TextBlock Text="VOLUME"
                       FontFamily="{StaticResource Tiny}"
                       TextAlignment="Center"
                       FontSize="40"
                       Padding="27"
                       Foreground="White"
                       HorizontalAlignment="Center">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Blue"
                                      BlurRadius="20"
                                      ShadowDepth="0"
                                      Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>
        </Border>

        <!-- Volume Control -->
        <Grid Margin="760,250,810,480" Height="100" Width="350">
            <Grid.Background>
                <SolidColorBrush Color="#BB000000" />
            </Grid.Background>
            <!-- Columns: Left button, value, right button -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="75" />
            </Grid.ColumnDefinitions>

            <!-- Decrease Button -->
            <Button Grid.Column="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="75"
                    BorderThickness="0"
                    Height="100"
                    FontSize="24"
                    Command="{Binding SwitchVolumeSettingCommand}">
                <Button.Background>
                    <SolidColorBrush Color="#00000000" />
                </Button.Background>
                <Button.Content>
                    <TextBlock Text="&lt;"
                               FontFamily="{StaticResource Tiny}"
                               Foreground="White"
                               FontSize="40">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Blue"
                                              BlurRadius="20"
                                              ShadowDepth="0"
                                              Opacity="1" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Button.Content>
            </Button>

            <!-- Current Value -->
            <TextBlock Grid.Column="1"
                       Text="{Binding VolumeSetting}"
                       FontFamily="{StaticResource Tiny}"
                       FontSize="40"
                       Foreground="White"
                       TextAlignment="Center"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="20,0">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Blue"
                                      BlurRadius="20"
                                      ShadowDepth="0"
                                      Opacity="1" />
                </TextBlock.Effect>
            </TextBlock>

            <!-- Increase Button -->
            <Button Grid.Column="2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="75"
                    BorderThickness="0"
                    Height="100"
                    FontSize="24"
                    Command="{Binding SwitchVolumeSettingCommand}">
                <Button.Background>
                    <SolidColorBrush Color="#00000000" />
                </Button.Background>
                <Button.Content>
                    <TextBlock Text="&gt;"
                               FontFamily="{StaticResource Tiny}"
                               Foreground="White"
                               FontSize="40">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="Blue"
                                              BlurRadius="20"
                                              ShadowDepth="0"
                                              Opacity="1" />
                        </TextBlock.Effect>
                    </TextBlock>
                </Button.Content>
            </Button>
        </Grid>

        <!-- Back Button -->
        <Button Width="350" Height="100" Margin="0,0,800,-20"
                BorderThickness="0" BorderBrush="White"
                Command="{Binding GoBackCommand}">
            <Button.Background>
                <SolidColorBrush Color="#BB000000" />
            </Button.Background>
            <Button.Content>
                <TextBlock Text="BACK"
                           Foreground="White"
                           FontFamily="{StaticResource Tiny}"
                           FontSize="40">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="HotPink"
                                          BlurRadius="20"
                                          ShadowDepth="0"
                                          Opacity="1" />
                    </TextBlock.Effect>
                </TextBlock>
            </Button.Content>
        </Button>
    </Grid>
</Page>
